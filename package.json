{
	"name": "better-cloud",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "npm run build && vite preview",
		"cf:typegen": "wrangler types",
		"cf:check": "tsc && vite build && wrangler deploy --dry-run",
		"cf:deploy": "npm run build && wrangler deploy",
		"check": "biome check --write src --verbose",
		"check:unsafe": "biome check --write src --unsafe --verbose",
		"db:touch": "wrangler d1 execute better-cloud-db --local --command='SELECT 1'",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply better-cloud-db --local",
		"db:migrate:prod": "ENVIRONMENT=production drizzle-kit migrate",
		"db:migrate:dtw": "wrangler d1 migrations apply better-cloud-db --remote",
		"postdeploy": "npm run db:migrate:dtw",
		"db:studio": "drizzle-kit studio",
		"db:studio:prod": "ENVIRONMENT=production drizzle-kit studio"
	},
	"dependencies": {
		"@biomejs/biome": "^1.9.4",
		"@hono/trpc-server": "^0.3.4",
		"@hookform/resolvers": "^5.0.1",
		"@libsql/client": "^0.15.4",
		"@radix-ui/react-label": "^2.1.4",
		"@radix-ui/react-slot": "^1.2.0",
		"@tailwindcss/vite": "^4.1.4",
		"@tanstack/react-form": "^1.8.0",
		"@tanstack/react-query": "^5.74.4",
		"@tanstack/react-router": "^1.117.1",
		"@trpc/client": "^11.1.1",
		"@trpc/server": "^11.1.1",
		"@trpc/tanstack-react-query": "^11.1.1",
		"better-auth": "^1.2.7",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.43.1",
		"hono": "4.7.7",
		"lucide-react": "^0.503.0",
		"next-themes": "^0.4.6",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"react-hook-form": "^7.56.1",
		"resend": "^4.4.1",
		"sonner": "^2.0.3",
		"tailwind-merge": "^3.2.0",
		"tailwindcss": "^4.1.4",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "1.0.8",
		"@tanstack/react-query-devtools": "^5.74.6",
		"@tanstack/react-router-devtools": "^1.117.1",
		"@tanstack/router-plugin": "^1.117.1",
		"@types/node": "22.14.1",
		"@types/react": "19.0.10",
		"@types/react-dom": "19.0.4",
		"@vitejs/plugin-react": "4.4.1",
		"drizzle-kit": "^0.31.0",
		"globals": "15.15.0",
		"tw-animate-css": "^1.2.8",
		"typescript": "5.8.3",
		"vite": "6.3.2",
		"wrangler": "^4.13.1"
	},
	"packageManager": "bun@1.2.9"
}
