{
  "name": "better-cloud",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build --minify",
    "preview": "bun run build && vite preview",
    "cf:dev": "wrangler dev",
    "cf:typegen": "wrangler types",
    "cf:check": "tsc && vite build && wrangler deploy --dry-run",
    "cf:deploy": "bun run build && wrangler types && wrangler deploy",
    "check": "biome check --write src --verbose",
    "check:unsafe": "biome check --write src --unsafe --verbose",
    "db:touch": "wrangler d1 execute better-cloud-db --local --command='SELECT 1'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply better-cloud-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply better-cloud-db --remote",
    "db:studio": "drizzle-kit studio",
    "db:studio:prod": "ENVIRONMENT=production drizzle-kit studio"
  },
  "dependencies": {
    "@biomejs/biome": "2.1.2",
    "@hono/trpc-server": "^0.4.0",
    "@libsql/client": "^0.15.10",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-form": "^1.14.1",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-router": "^1.128.6",
    "@trpc/client": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "@trpc/tanstack-react-query": "^11.4.3",
    "alchemy": "^0.49.0",
    "better-auth": "^1.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.3",
    "hono": "4.8.5",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.525.0",
    "radix-ui": "^1.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "resend": "^4.7.0",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "1.9.6",
    "@tanstack/react-query-devtools": "^5.83.0",
    "@tanstack/react-router-devtools": "^1.128.6",
    "@tanstack/router-plugin": "^1.128.6",
    "@types/node": "24.0.15",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.7.0",
    "drizzle-kit": "^0.31.4",
    "globals": "16.3.0",
    "tw-animate-css": "^1.3.5",
    "typescript": "5.8.3",
    "vite": "7.0.5",
    "wrangler": "^4.25.0"
  },
  "packageManager": "bun@1.2.12"
}
